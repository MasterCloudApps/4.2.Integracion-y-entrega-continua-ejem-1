pipeline {
    agent {
        docker { image 'maven:3.6.3' }
    }

    tools {
        maven 'MAVEN3'
    }
    stages {
        stage('Test') {
            steps {
                sh "mvn test"
            }
            post {
                always {
                    junit '**/target/*.xml'
                }
            }
        }  
        
    }
}